{
  "$schema": "https://json.schemastore.org/tsconfig",

  // Compiler Options - Controls how TypeScript compiles your code
  "compilerOptions": {
    /* Type Checking Options - Enables strict type safety */

    // Enable all strict type checking options
    "strict": true,

    // Ensure that casing is correct in imports (affects case-sensitive file systems)
    "forceConsistentCasingInFileNames": true,

    // Report errors for fallthrough cases in switch statements
    "noFallthroughCasesInSwitch": true,

    // Disallow implicit 'any' types - forces explicit typing
    "noImplicitAny": true,

    // Raise error on 'this' expressions with an implied 'any' type
    "noImplicitThis": true,

    // Enable strict checking of function types
    "strictFunctionTypes": true,

    // Enable strict checking of property initialization in classes
    "strictPropertyInitialization": true,

    // Parse in strict mode and emit "use strict" for each source file
    "alwaysStrict": true,

    // Ensure 'use strict' is always emitted
    "strictNullChecks": true,

    // Report errors on unused local variables
    "noUnusedLocals": true,

    // Report errors on unused parameters in functions
    "noUnusedParameters": true,

    // Report error when not all code paths in function return a value
    "noImplicitReturns": true,

    // Disallow unreachable code
    "allowUnreachableCode": false,

    // Disallow unused labels
    "allowUnusedLabels": false,

    // Report errors for variables that are declared but never used
    "noUncheckedIndexedAccess": true,

    /* Module Resolution Options - How TypeScript finds and imports modules */

    // Use Node.js-style module resolution
    "moduleResolution": "bundler",

    // Allow importing .json files
    "resolveJsonModule": true,

    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true,

    // Enables emit interoperability between CommonJS and ES Modules
    "esModuleInterop": true,

    // Skip type checking of declaration files (.d.ts)
    "skipLibCheck": true,

    /* Language and Environment - What JavaScript features are available */

    // Target ECMAScript version for compiled JavaScript
    "target": "ES2022",

    // Specify library files to be included in the compilation
    "lib": ["ES2022"],

    // Use React JSX mode
    "jsx": "preserve",

    /* Emit Options - Controls what gets output */

    // Do not emit compiled output (handled by bundlers like Next.js/Vite)
    "noEmit": true,

    // Emit additional JavaScript to ease support for importing CommonJS modules
    "allowJs": true,

    // Ensure that each file can be safely transpiled without relying on other imports
    "isolatedModules": true,

    // Generate .d.ts files for TypeScript declarations
    "declaration": true,

    // Specify module code generation
    "module": "ESNext",

    /* Interop Constraints */

    // Ensure each file can be safely transpiled without relying on other imports
    "verbatimModuleSyntax": false,

    /* Path Mapping - Absolute imports across the monorepo */
    "baseUrl": ".",
    "paths": {
      "@marketplace/database": ["packages/database/src/index.ts"],
      "@marketplace/utils": ["packages/utils/src/index.ts"]
    },

    /* Advanced Options */

    // Include sourcemaps for debugging
    "sourceMap": true,

    // Remove comments in compiled output
    "removeComments": true,

    // Ensure consistent module detection
    "moduleDetection": "force"
  },

  // Files to exclude from compilation
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
