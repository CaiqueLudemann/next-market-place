# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# Learn more: https://editorconfig.org

# This is the top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
# Character set for file encoding
charset = utf-8
# End files with a newline
end_of_line = lf
# Ensure file ends with a newline
insert_final_newline = true
# Remove any whitespace characters at the end of lines
trim_trailing_whitespace = true

# Indentation settings for all files
# Use spaces for indentation (not tabs)
indent_style = space
# Number of spaces per indentation level
indent_size = 2

# Markdown files may use trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false
# Markdown often uses 4-space indentation for code blocks
indent_size = 4

# Makefiles require tabs for indentation
[Makefile]
indent_style = tab

# Package.json and similar JSON files
[*.json]
indent_size = 2

# YAML files (common in CI/CD configurations)
[*.{yml,yaml}]
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# CSS, SCSS, and related stylesheets
[*.{css,scss,sass,less}]
indent_size = 2
